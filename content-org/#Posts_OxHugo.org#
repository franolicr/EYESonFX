#+BEGIN_SRC R 
  source( file= "/Dnk/R_setup.R")

  m$h$nm <- "BoE_JSC"
  m$h$vrsn <- 1
        
  lg_strt( m$h$nm, m$h$vrsn)
#+END_SRC

