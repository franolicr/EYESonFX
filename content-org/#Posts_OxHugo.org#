  m$p$txt2 <- lapply( grep( "GRID.text", grid.ls( flatten= TRUE, print= FALSE)$name, value= TRUE), grid.get)[2:4]
  m$p$lbl2 <- lapply( grep( "GRID.label", grid.ls( flatten= TRUE, print= FALSE)$name, value= TRUE), grid.get)
